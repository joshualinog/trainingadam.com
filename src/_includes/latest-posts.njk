<div id="latest-posts" class="grid grid-cols-1 md:grid-cols-3 gap-6 p-6">
  {% for post in posts %}
    {% if loop.index <= 4 %}
      {% if loop.index == 1 %}
        <!-- First row: Featured post (full width) -->
        <div class="md:col-span-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white p-8 rounded-lg shadow-lg">
          <h2 class="text-3xl font-bold mb-4">{{ post.data.title }}</h2>
          <p class="text-lg mb-4">{{ post.data.excerpt | striptags | truncate(150) }}</p>
          <a href="{{ post.url }}" class="inline-block bg-white text-blue-600 px-6 py-2 rounded-full font-semibold hover:bg-gray-100">Read More</a>
        </div>
      {% else %}
        <!-- Second row: Three columns -->
        <div class="bg-white p-6 rounded-lg shadow-md border">
          <img src="https://via.placeholder.com/300x200?text=No+Image" alt="Post Image" class="w-full h-32 object-cover rounded mb-4">
          <h3 class="text-xl font-semibold mb-2">{{ post.data.title }}</h3>
          <p class="text-gray-600 mb-4">{{ post.data.excerpt | striptags | truncate(100) }}</p>
          <a href="{{ post.url }}" class="text-blue-500 hover:underline">Read More</a>
        </div>
      {% endif %}
    {% endif %}
  {% endfor %}
</div>