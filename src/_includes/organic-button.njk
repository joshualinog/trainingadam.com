{% set button_url = button_url | default("#") %}
{% set button_text = button_text | default("Button") %}
<div class="organic-button-wrapper relative inline-block">
  <a href="{{ button_url }}" class="organic-button block">
    <svg viewBox="-120 0 320 200" xmlns="http://www.w3.org/2000/svg" class="organic-button-svg">
      <defs>
        <filter id="rough" x="-20%" y="-20%" width="140%" height="140%">
          <feTurbulence baseFrequency="0.7" numOctaves="2" result="noise" />
          <feDisplacementMap in="SourceGraphic" in2="noise" scale="6" xChannelSelector="R" yChannelSelector="G" />
        </filter>
        <pattern id="imgfill" patternUnits="userSpaceOnUse" width="200" height="200">
          <image href="/assets/images/donateyellow.png" x="0" y="0" width="200" height="200" preserveAspectRatio="xMidYMid slice" />
        </pattern>
      </defs>
      <!-- larger, filtered circle creates the rough outer perimeter -->
      <circle cx="100" cy="100" r="95" fill="url(#imgfill)" filter="url(#rough)" />
      <!-- top crisp circle masks the inner image so it stays clear -->
      <circle cx="100" cy="100" r="80" fill="url(#imgfill)" />
      <!-- left rectangle (3/4 the inner circle's diameter) barely overlapping the circle (drawn last so it sits on top) -->
      <rect x="-94" y="40" width="120" height="120" class="organic-button-rect" rx="10" />
      <!-- textbox inside the rectangle -->
      <foreignObject x="-90" y="46" width="112" height="108">
        <div xmlns="http://www.w3.org/1999/xhtml" class="organic-button-cta-text">
          {{ button_text }}
        </div>
      </foreignObject>
      <!-- heading text placed on the circle (SVG text), centered near top -->
      <text x="100" y="-10" class="organic-button-heading-svg">{{ button_heading | default("") }}</text>
    </svg>
    <span class="sr-only">{{ button_text }}</span>
  </a>

  <!-- Close button sits outside the link so it doesn't trigger navigation -->
  <button type="button" class="organic-button-close absolute bg-white rounded-full p-2 shadow-md text-night-bordeaux-500 hover:bg-night-bordeaux-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-night-bordeaux-500" aria-label="Close" style="opacity:0">
    <span class="sr-only">Close</span>
    <!-- X icon (Heroicon-style) -->
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>
</div>