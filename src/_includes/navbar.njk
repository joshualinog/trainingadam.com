{# Mobile-first responsive navbar #}
<nav class="w-full flex items-center justify-between px-4 py-3 bg-white shadow-md md:px-8 relative z-20">
  <div class="flex items-center">
    <span class="font-black text-2xl tracking-tight">TRAIN <span class="brand-adam">adam</span></span>
  </div>
  <button class="md:hidden block" aria-label="Open menu" id="mobile-menu-btn">
    <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
  <ul class="hidden md:flex space-x-8 font-medium text-gray-700">
    <li><a href="#" class="hover:text-blue-600">Home</a></li>
    <li><a href="/blog" class="hover:text-blue-600">Blog</a></li>
    <li><a href="#" class="hover:text-blue-600">Compare</a></li>
    <li><a href="#" class="hover:text-blue-600">Features</a></li>
    <li><a href="#contact" class="hover:text-blue-600">Contact</a></li>
  </ul>

  <!-- Mobile Footer Menu -->
  <div id="mobile-footer" class="fixed left-0 right-0 bottom-0 z-50 bg-white border-t border-gray-200 shadow-lg p-6 flex flex-col items-center space-y-4 md:hidden transition-transform duration-300 translate-y-full" style="will-change: transform;">
    <button id="close-mobile-footer" class="absolute top-2 right-4 text-2xl" aria-label="Close menu">&times;</button>
    <a href="#" class="text-gray-900 font-semibold text-lg">Home</a>
    <a href="/blog" class="text-gray-900 font-semibold text-lg">Blog</a>
    <a href="#" class="text-gray-900 font-semibold text-lg">Compare</a>
    <a href="#" class="text-gray-900 font-semibold text-lg">Features</a>
    <a href="#contact" class="text-gray-900 font-semibold text-lg">Contact</a>
  </div>

  <script>
    // Mobile menu toggle logic
    const btn = document.getElementById('mobile-menu-btn');
    const footer = document.getElementById('mobile-footer');
    const closeBtn = document.getElementById('close-mobile-footer');
    if (btn && footer && closeBtn) {
      btn.addEventListener('click', () => {
        const isOpen = !footer.classList.contains('translate-y-full');
        if (isOpen) {
          footer.classList.add('translate-y-full');
          footer.classList.remove('translate-y-0');
        } else {
          footer.classList.remove('translate-y-full');
          footer.classList.add('translate-y-0');
        }
      });
      closeBtn.addEventListener('click', () => {
        footer.classList.add('translate-y-full');
        footer.classList.remove('translate-y-0');
      });
    }
  </script>
</nav>
{# Mobile menu triggers footer include, handled in JS #}
