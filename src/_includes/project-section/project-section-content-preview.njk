<div class="overflow-hidden  py-24 sm:py-32 ">
  <div class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
    <div class="max-w-4xl">
      <p class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">About us</p>
      <h1 class="mt-2 text-4xl font-heading font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">On a mission to {{ project.description }}</h1>
      <p class="mt-6 text-xl/8 text-balance text-gray-700 dark:text-gray-300">{{ project.description }}</p>
    </div>
    <section class="mt-20 grid grid-cols-1 lg:grid-cols-2 lg:gap-x-8 lg:gap-y-16">
      <div class="lg:pr-8">
        <h2 class="text-2xl font-heading font-semibold tracking-tight text-pretty text-gray-900 dark:text-white">{{ project.missionTitle }}</h2>
        <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-10 lg:max-w-none lg:grid-cols-2 lg:gap-y-16">
          {% for feature in project.projectFeatures %}
          <div class="relative pl-16">
            <dt class="text-base/7 font-semibold text-gray-900 dark:text-white">
              <div class="absolute top-0 left-0 flex size-10 items-center justify-center rounded-lg bg-indigo-600 dark:bg-indigo-500">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6 text-white">
                  <path d="{{ feature.icon }}" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
              </div>
              {{ feature.short }}
            </dt>
            <dd class="mt-2 text-base/7 text-gray-600 dark:text-gray-400">{{ feature.description }}</dd>
          </div>
          {% endfor %}
        </dl>
      </div>
      <div class="pt-16 lg:row-span-2 lg:-mr-16 xl:mr-auto">
        <div class="-mx-8 grid grid-cols-2 gap-4 sm:-mx-16 sm:grid-cols-4 lg:mx-0 lg:grid-cols-2 xl:gap-8">
          <div class="aspect-square overflow-hidden rounded-xl shadow-xl outline-1 -outline-offset-1 outline-black/10 dark:shadow-none dark:outline-white/10">
            <img src="https://picsum.photos/560/560" alt="" class="block size-full object-cover" />
          </div>
          <div class="-mt-8 aspect-square overflow-hidden rounded-xl shadow-xl outline-1 -outline-offset-1 outline-black/10 lg:-mt-40 dark:shadow-none dark:outline-white/10">
            <img src="https://picsum.photos/560/560" alt="" class="block size-full object-cover" />
          </div>
          <div class="aspect-square overflow-hidden rounded-xl shadow-xl outline-1 -outline-offset-1 outline-black/10 dark:shadow-none dark:outline-white/10">
            <img src="https://picsum.photos/560/560" alt="" class="block size-full object-cover" />
          </div>
          <div class="-mt-8 aspect-square overflow-hidden rounded-xl shadow-xl outline-1 -outline-offset-1 outline-black/10 lg:-mt-40 dark:shadow-none dark:outline-white/10">
            <img src="https://picsum.photos/560/560" alt="" class="block size-full object-cover" />
          </div>
        </div>
      </div>
      <div class="max-lg:mt-16 lg:col-span-1">
        <p class="text-base/7 font-semibold text-gray-500 dark:text-gray-400">The numbers</p>
        <hr class="mt-6 border-t border-gray-200 dark:border-gray-700" />
        <dl class="mt-6 grid grid-cols-1 gap-x-8 gap-y-4 sm:grid-cols-2">
          <div class="flex flex-col gap-y-2 border-b border-dotted border-gray-200 pb-4 dark:border-gray-700">
            <dt class="text-sm/6 text-gray-600 dark:text-gray-400">Raised</dt>
            <dd class="order-first text-6xl font-semibold tracking-tight text-gray-900 dark:text-white">$<span>{{ project.stats.raised }}</span></dd>
          </div>
          <div class="flex flex-col gap-y-2 border-b border-dotted border-gray-200 pb-4 dark:border-gray-700">
            <dt class="text-sm/6 text-gray-600 dark:text-gray-400">Companies</dt>
            <dd class="order-first text-6xl font-semibold tracking-tight text-gray-900 dark:text-white"><span>{{ project.stats.companies }}</span></dd>
          </div>
          <div class="flex flex-col gap-y-2 max-sm:border-b max-sm:border-dotted max-sm:border-gray-200 max-sm:pb-4 dark:max-sm:border-gray-700">
            <dt class="text-sm/6 text-gray-600 dark:text-gray-400">Deals Closed</dt>
            <dd class="order-first text-6xl font-semibold tracking-tight text-gray-900 dark:text-white"><span>{{ project.stats.dealsClosed }}</span></dd>
          </div>
          <div class="flex flex-col gap-y-2">
            <dt class="text-sm/6 text-gray-600 dark:text-gray-400">Leads Generated</dt>
            <dd class="order-first text-6xl font-semibold tracking-tight text-gray-900 dark:text-white"><span>{{ project.stats.leadsGenerated }}</span></dd>
          </div>
        </dl>
      </div>
    </section>
  </div>
</div>