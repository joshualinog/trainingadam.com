{# Contact section: form #}
<section id="contact" class="w-full py-12 bg-gray-50">
  <div class="max-w-2xl mx-auto px-4">
    <h2 class="text-2xl md:text-4xl font-bold mb-8 text-center">Contact Us</h2>
    <form class="bg-white rounded-lg shadow p-6 flex flex-col gap-4">
      <input type="text" name="name" placeholder="Your Name" class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" required />
      <input type="email" name="email" placeholder="Your Email" class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" required />
      <textarea name="message" placeholder="Your Message" rows="4" class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
      <button type="submit" class="bg-blue-600 text-white rounded px-6 py-2 font-semibold hover:bg-blue-700">Send Message</button>
    </form>
  </div>
</section>
